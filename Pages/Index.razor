@page "/"

@using Blazor.PieChart.Components

<input type="range" id="value" name="value" min="0" max="1" step="0.01" @bind:event="oninput" @bind="Value" />

<PieChart Value="@Value" BackgroundColor="#d7d7d7" FillColor="#1ab394" Radius="16" />

@code {
    private double Value { get; set; } = 0.33;
}
